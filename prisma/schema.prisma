generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id               String    @id @default(cuid())

  // Required fields
  municipalityName String
  facilityName     String
  category         Category
  briefDescription String    @db.VarChar(150)  // Short summary for cards/lists
  fullDescription  String    @db.VarChar(2000) // Detailed project description
  contactName      String
  contactEmail     String

  // Location - city-level precision only
  // SECURITY: Coordinates are intentionally limited to city-level precision
  // to protect facility locations from potential targeting during wartime.
  // Do NOT store or transmit exact facility addresses or precise coordinates.
  cityLatitude     Float
  cityLongitude    Float

  // Optional fields
  address          String?   // General area description, not exact address
  contactPhone     String?
  urgency          Urgency   @default(MEDIUM)
  status           Status    @default(OPEN)

  // Technical & Financial Details (for renewable energy projects)
  projectType           ProjectType?        // Solar PV, Heat Pump, Water Treatment, General
  projectSubtype        String?             // e.g., "Building hybrid PV", "Ground-mounted"
  technicalPowerKw      Decimal?  @db.Decimal(10, 2)  // Theoretical power in kilowatts
  numberOfPanels        Int?                // For solar projects
  estimatedCostUsd      Decimal?  @db.Decimal(12, 2)  // Approximate project cost in USD
  cofinancingAvailable  CofinancingStatus?  // Yes, No, Needs Clarification
  cofinancingDetails    String?             // Amount or percentage details
  partnerOrganization   String?             // NGO or partner name

  // Timestamps
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  photos             ProjectImage[]
  contactSubmissions ContactSubmission[]

  @@index([category])
  @@index([status])
  @@index([urgency])
  @@index([projectType])
  @@index([createdAt])
}

/// Project images with a maximum of 5 per project.
/// The 5-image limit must be enforced at the application layer.
model ProjectImage {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  url       String
  altText   String?  @db.VarChar(200)
  sortOrder Int      @default(0) // For ordering images in display
  createdAt DateTime @default(now())

  @@index([projectId])
  @@index([sortOrder])
}

/// Contact submissions from donors interested in projects.
/// Email notifications are sent to ADMIN_EMAIL when submissions are created.
model ContactSubmission {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  donorName   String
  donorEmail  String
  message     String   @db.VarChar(1000)
  handled     Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([projectId])
  @@index([createdAt])
  @@index([handled])
}

enum Category {
  HOSPITAL
  SCHOOL
  WATER
  ENERGY
  OTHER
}

enum Urgency {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum Status {
  OPEN
  IN_DISCUSSION
  MATCHED
  FULFILLED
}

enum ProjectType {
  SOLAR_PV
  HEAT_PUMP
  WATER_TREATMENT
  GENERAL
}

enum CofinancingStatus {
  YES
  NO
  NEEDS_CLARIFICATION
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}

/// Project submissions from municipalities awaiting admin review.
/// Once approved, a Project record is created from the submission data.
model ProjectSubmission {
  id                    String   @id @default(cuid())

  // Municipality info
  municipalityName      String
  municipalityEmail     String
  region                String?

  // Project details
  facilityName          String
  category              Category
  projectType           String
  briefDescription      String   @db.VarChar(150)
  fullDescription       String   @db.VarChar(2000)
  urgency               Urgency  @default(MEDIUM)

  // Technical & financial
  estimatedCostUsd      Decimal? @db.Decimal(12, 2)
  technicalPowerKw      Decimal? @db.Decimal(10, 2)
  numberOfPanels        Int?
  cofinancingAvailable  String?
  cofinancingDetails    String?

  // Location
  cityName              String
  address               String?
  cityLatitude          Decimal  @db.Decimal(10, 8)
  cityLongitude         Decimal  @db.Decimal(11, 8)

  // Contact
  contactName           String
  contactEmail          String
  contactPhone          String?

  // Supporting info
  partnerOrganization   String?
  projectSubtype        String?
  additionalNotes       String?  @db.VarChar(1000)

  // Status tracking
  status                SubmissionStatus @default(PENDING)
  reviewedAt            DateTime?
  reviewedBy            String?
  rejectionReason       String?
  approvedProjectId     String?  // Link to created Project if approved

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
  @@index([municipalityEmail])
}
